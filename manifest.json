{
    "manifest_version": 3,
    "name": "增强型标签管理器",
    "version": "1.2",
    "description": "管理你的 Chrome 标签页，提供高级功能",
    "permissions": ["tabs", "tabGroups", "storage", "history"],
    "action": {
      "default_popup": "popup.html"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        },
        "description": "打开标签管理器"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }